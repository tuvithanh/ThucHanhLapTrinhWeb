@model _23DH113217_MyStore.Models.ViewModel.ProductDetailsVM
@using PagedList.Mvc
<head>
    <style>
        img {
            width: 100%;
        }

        li.product-item {
            margin-left: 50px;
        }

        .product-item {
            width: 200px;
            
        }
        ul li.product-item a{
            text-decoration: none;
        }
        ul{
            list-style-type: none;
        }
    </style>
</head>
@if (Model.TopProducts != null && Model.TopProducts.Any())
{
<section class="container-fluid listProduct">
    <h4 style="font-weight:bold;">Sản phẩm bán chạy</h4>
    <ul class="list-container">
    @foreach (var product in Model.TopProducts)
    {
        <li class="product-item">
        <div>
        <a href="@Url.Action("Product Details", "Home", new { id = product.ProductID })"> <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
        </a>
        </div>
        <div>
        <h5>@Html.DisplayFor(modelItem => product.ProductName) </h5>
        <p class="prodSale">@Html.DisplayFor(modelItem => product.ProductPrice)</p> </div>
        </li>
    }

</ul>
</section>

<div class="pagination-container">
    @Html.PagedListPager(Model.TopProducts, page => Url.Action("ProductDetails", new
{
    id = Model.product.ProductID,
    quantity = Model.quantity,
    page
}))
</div>
}

