﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        /*HTML*/
        html {
            font-family: Arial, Helvetica, sans-serif;
   
        }


        
        /*HEADER*/
        header {
        }
        

        nav.nav-container{
            background-color: black;
            display: flex;
            justify-content: space-between;
        }
        .right-side, .left-side{
            list-style-type:none;
        }
        .right-side li, .left-side li{
            display: inline-block;
        }
        .right-side li a, .left-side li a{
            text-decoration: none;
            display: block;
            width: 100%;
            height: 100%;
            font-size: 18px;
            color: white;
            font-weight: bold;
            padding: 9px;
        }
        
        /*BANNER*/


    </style>
</head>

<body>
    <div id="container">
        <header id="container">
            <div class="logoweb">
                <img style="width: 100px" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a6/Logo_NIKE.svg/2560px-Logo_NIKE.svg.png" />
            </div>
            <nav class="nav-container">
                <ul class="left-side">
                    <li><a href="~/Home/TrangChu">HOME</a></li>
                    <li><a href="~/Collections/Collections">COLLECTIONS <i class="fa fa-caret-right fa-rotate-90" aria-hidden="true"></i></a></li>
                    <li><a href="~/Shop/Shop">SHOP <i class="fa fa-caret-right fa-rotate-90" aria-hidden="true"></i></a></li>
                    <li><a href="~/LookBook/LookBook">LOOKBOOK <i class="fa fa-caret-right fa-rotate-90" aria-hidden="true"></i></a></li>
                    <li><a href="~/Blog/Blog">BLOG <i class="fa fa-caret-right fa-rotate-90" aria-hidden="true"></i></a></li>
                    <li><a href="~/FAQS/FAQS">FAQS</a></li>
                    <li><a href="~/AboutUs/AboutUs">ABOUT US</a></li>
                    <li><a href="~/ContactUs/ContactUs">CONTACT US</a></li>
                    
                </ul>
                <ul class="right-side">
                    <li ><a href="~/Register/Register">Register</a></li>
                </ul>
            </nav>
        </header>
        <section class="banner">
            <div id="banner"></div>
            <div>
                @RenderBody()
            </div>
        </section>
    </div>
</body>
</html>